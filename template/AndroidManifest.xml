<?xml version="1.0" encoding="utf-8"?>
<manifest 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:git="http://cgawron.dyndns.org/android/git"
  package="de.cgawron.agoban"
  android:versionCode="1"
  android:versionName="1.0">
  <application android:label="@string/app_name" android:icon="@drawable/icon" android:name="de.cgawron.agoban.SGFApplication">
    <!--
    <provider android:authorities="de.cgawron.agoban" android:name="de.cgawron.agoban.provider.SGFProvider"/>
    -->
    <activity android:name=".EditSGF"
      android:label="@string/app_name">
      <intent-filter>
	<action android:name="android.intent.action.MAIN" />
	<category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
	<category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:mimeType="application/x-go-sgf" />
      </intent-filter>
    </activity>
    <activity android:name=".ShowGameInfo"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="GameInfo" />
      </intent-filter>
    </activity>
  </application>
</manifest> 
